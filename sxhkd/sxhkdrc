#
# wm independent hotkeys
#

# terminal emulator
super + shift + Return
	urxvt

super + shift + f
    firefox

super + shift + t
    thunderbird

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# hardware controle
#
XF86AudioRaiseVolume
    source $DOTFILES/zsh/scripts/tools.sh; change_volume up 5

XF86AudioLowerVolume
    source $DOTFILES/zsh/scripts/tools.sh; change_volume down 5

XF86AudioMute
    sudo /usr/src/hardware_tools/toggle_sound.sh

XF86MonBrightnessUp
    sudo /usr/src/hardware_tools/backlight.sh up 5

XF86MonBrightnessDown
    sudo /usr/src/hardware_tools/backlight.sh down 5

XF86WLAN
    sudo /usr/src/hardware_tools/toggle_flightmode.sh

XF86AudioMicMute
    sudo /usr/src/hardware_tools/toggle_mic.sh

shift + ctrl + s
    screenshot clip

mod5 + Print
    source $DOTFILES/zsh/scripts/tools.sh; toggle_monitor right

ctrl + Print
    source $DOTFILES/zsh/scripts/tools.sh; toggle_monitor left

Print 
    source $DOTFILES/zsh/scripts/tools.sh; toggle_monitor same

shift + control + Print
    source $DOTFILES/zsh/scripts/tools.sh; toggle_monitor only-screen

XF86Favorites
    source $DOTFILES/zsh/scripts/tools.sh; rs_bt

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }c
	bspc node -{c,k}

# change to monocle layout
super + m
	bspc desktop -l monocle 

# change to tiled layout
super + t
	bspc desktop -l tiled 

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + Return
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
# super + {t,shift + t,s,f}
#	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# move to a different monitor
super + shift + {comma, period}
    bspc node -m {prev, next} --follow

# focus the node for the given path jump
# super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
# super + {_,shift + }c
#	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus monitor to the left / right
super + {comma,period} 
    bspc monitor -f {prev,next}

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node {-z left -20 0 -z right -20 0,-z bottom 0 20,-z top 0 -20,-z left 20 0 -z right 20 0}

# extend or shrink a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node {-z left -20 0 -z right 20 0,-z top 0 -20 -z bottom 0 20,-z top 0 20 -z bottom 0 -20,-z left 20 0 -z right -20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
